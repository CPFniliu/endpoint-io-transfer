<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="INFO">
    <Appenders>
        <!-- 这个就是自定义的Appender -->
        <JTextAreaAppender name="TextArea" >
            <PatternLayout pattern="[%-5p] %d{HH:mm:ss} - %m%n" />
        </JTextAreaAppender>

        <!--这个输出控制台的配置，这里输出除了warn和error级别的信息到System.out -->
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY" />
            <!-- 输出日志的格式 -->
            <PatternLayout pattern="[%p] %d{yyyy-MM-dd HH:mm:ss} {%1} (%F:%L) %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <logger name="com.github.cosycode" level="DEBUG"/>
        <Logger name="cn.cpf" level="DEBUG"/>

        <Root level="info">
            <AppenderRef ref="TextArea"/>
<!--            <AppenderRef ref="Console"/>-->
        </Root>
    </Loggers>
</Configuration>
